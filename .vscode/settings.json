{
    "liveServer.settings.https": {
        "enable": true,
        "cert": "./localssl/server.crt",
        "key": "./localssl/server.key",
        "passphrase": "github"
    },
    "liveSassCompile.settings.formats": [
        {
            "format": "expanded",
            "extensionName": ".css",
            "savePath": "/dist/"
        },
        {
            "extensionName": ".min.css",
            "format": "compressed",
            "savePath": "/dist/"
        }
    ],
    "liveSassCompile.settings.excludeList": [
        "**/node_modules/**",
        ".vscode/**",
        "**/modules/**",
        "**/partials/**"
    ],
    "liveSassCompile.settings.generateMap": false,
    "liveSassCompile.settings.autoprefix": [
        "> 1%",
        "last 2 versions"
    ],
    "easysass.targetDir": "dist/",
    "easysass.formats": [
        {
            "format": "expanded",
            "extension": ".css"
        },
        {
            "format": "compressed",
            "extension": ".min.css"
        }
    ],
    "easysass.excludeRegex": "[^(?!main.scss).+|^(?!userstyle.css).+]",
    "easysass.compileAfterSave": true,
    "macros": {
        "scss": [
            "workbench.action.files.save",
            "easysass.compileAll"
        ]
    },
    "liveServer.settings.port": 5500
}